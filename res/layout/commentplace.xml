<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/moodcommentItem"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/public_mood_edit_bg"
        android:orientation="horizontal"
        android:paddingBottom="6.0dip" >

        <RelativeLayout
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:layout_marginTop="3.0dip" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="44.0dip"
                android:layout_height="44.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="6.0dip"
                android:layout_marginTop="8.0dip"
                android:background="@drawable/photo_background"
                android:duplicateParentState="false"
                android:scaleType="fitXY"
                android:src="@drawable/umeng_share_logo_sina" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutAnimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="#ff3b8ed4" />
            <!--
            <TextView android:textSize="14px" android:textColor="#ff404040"
				android:id="@+id/message" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:lineSpacingExtra="8.0dip" />
			<TextView android:textSize="12.0dip" android:textColor="#ffaaaaaa"
				android:id="@+id/dateline" android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
            -->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/public_mood_edit_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10.0dip" >

        <EditText
            android:id="@+id/share_content"
            android:layout_width="fill_parent"
            android:layout_height="150dip"
            android:gravity="top"
            android:hint="@string/place_comment"
            android:scrollbars="vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/public_mood_edit_bg"
            android:gravity="center"
            android:padding="2px" >

            <ImageView
                android:id="@+id/share_image"
                android:layout_width="128dip"
                android:layout_height="100dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/share_word_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="5dip"
                android:text="140"
                android:textColor="@color/black"
                android:textSize="14.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/SignUpButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="@string/submit_placecomment" />

            <Button
                android:id="@+id/ReturnButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="@string/btnreturn" />

            <ImageButton
                android:id="@+id/share_imagechoose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/imagechoosebutton_bg" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>