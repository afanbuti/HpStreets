<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/public_mood_edit_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10.0dip" >

        <EditText
            android:id="@+id/share_subject"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/blog_title"
            android:singleLine="true" />

        <EditText
            android:id="@+id/share_content"
            android:layout_width="fill_parent"
            android:layout_height="150dip"
            android:gravity="top"
            android:hint="@string/blog_content"
            android:scrollbars="vertical" />
        <!--
			<TextView android:id="@+id/share_word_counter" android:text="140"
			android:textSize="14.0sp" android:layout_width="35dip"
			android:textColor="@color/black" android:layout_height="wrap_content"
			android:gravity="center_vertical|right" android:paddingRight="5dip"
			/>
        -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/public_mood_edit_bg"
            android:gravity="center"
            android:padding="2px" >

            <ImageView
                android:id="@+id/share_image"
                android:layout_width="128dip"
                android:layout_height="100dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/SignUpButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="@string/submit_blog" />

            <Button
                android:id="@+id/ReturnButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="@string/btnreturn" />

            <ImageButton
                android:id="@+id/share_imagechoose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/imagechoosebutton_bg" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>