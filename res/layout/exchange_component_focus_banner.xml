<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exchange_banner"
    android:layout_width="fill_parent"
    android:layout_height="55dp" >

    <RelativeLayout
        android:id="@+id/exchange_banner_bg"
        android:layout_width="fill_parent"
        android:layout_height="67dp"
        android:background="@drawable/exchange_banner_grey" >
    </RelativeLayout>

    <ImageView
        android:id="@+id/exchange_appIcon0"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/exchange_zhanwei" >
    </ImageView>

    <TextView
        android:id="@+id/exchange_name0"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/exchange_appIcon0"
        android:text="开心听"
        android:textColor="#000000"
        android:textSize="14dp" >
    </TextView>

    <TextView
        android:id="@+id/exchange_content0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/exchange_appIcon0"
        android:text="android上最好的音乐软件"
        android:textColor="#777777"
        android:textSize="12dp" >
    </TextView>

    <TextView
        android:id="@+id/exchange_size0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="(大小:1.6M)"
        android:textColor="#777777"
        android:textSize="12dp" >
    </TextView>

</RelativeLayout>