<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/moodcommentItem"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/public_mood_edit_bg"
        android:orientation="horizontal"
        android:paddingBottom="6.0dip" >

        <RelativeLayout
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:layout_marginTop="3.0dip" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="44.0dip"
                android:layout_height="44.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="6.0dip"
                android:layout_marginTop="8.0dip"
                android:background="@drawable/photo_background"
                android:duplicateParentState="false"
                android:scaleType="fitXY"
                android:src="@drawable/umeng_share_logo_sina" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutAnimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="#ff3b8ed4" />

            <Button
                android:id="@+id/CheckinButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_setting_off"
                android:enabled="true"
                android:text="@string/checkin"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/SinaButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_setting_off"
                android:enabled="true"
                android:text="@string/binsina"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/RenrenButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_setting_off"
                android:enabled="true"
                android:text="@string/binrenren"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/TencButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_setting_off"
                android:enabled="true"
                android:text="@string/bintenc"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>