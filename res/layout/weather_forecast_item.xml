<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@drawable/city_view_forecast_press" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="right" android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="5.0">
        <TextView android:textSize="@dimen/weather_forecast_text_size" android:textColor="@color/white" android:id="@+id/forecast_item_week" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView android:textSize="@dimen/weather_forecast_text_size" android:textColor="@color/white" android:id="@+id/forecast_item_temp_range" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" />
    </LinearLayout>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="7.0">
        <ImageView android:id="@+id/forecast_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="fitCenter" />
    </LinearLayout>
</LinearLayout>