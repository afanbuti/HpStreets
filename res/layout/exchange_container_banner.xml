<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exchange_banner"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:background="@drawable/exchange_container_banner_background_selector"
    android:gravity="center" >

    <ImageView
        android:id="@+id/exchange_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/exchange_zhanwei" >
    </ImageView>

    <TextView
        android:id="@+id/exchange_name"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/exchange_icon"
        android:lines="1"
        android:text="开心听"
        android:textColor="#000000"
        android:textSize="14dp" >
    </TextView>

    <TextView
        android:id="@+id/exchange_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/exchange_name"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="65dp"
        android:layout_toRightOf="@+id/exchange_icon"
        android:ellipsize="marquee"
        android:lines="1"
        android:scrollHorizontally="true"
        android:text="android上最好的音乐软件"
        android:textColor="#777777"
        android:textSize="12dp" >
    </TextView>

    <ImageView
        android:layout_width="22dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/exchange_detail365"
        android:visibility="gone" >
    </ImageView>

    <TextView
        android:id="@+id/exchange_open_type"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:lines="1"
        android:text="查看"
        android:textColor="#777777"
        android:textSize="12dp"
        android:visibility="gone" >
    </TextView>

    <ImageButton
        android:id="@+id/exchange_download_btn"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/exchange_icon_background_selector"
        android:padding="10dp"
        android:src="@drawable/exchange_icon_download"
        android:visibility="gone" >
    </ImageButton>

    <Button
        android:id="@+id/exchange_ad_action_btn"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/exchange_ad_action_bg_selector"
        android:shadowColor="#FFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="3"
        android:text="下载"
        android:visibility="visible" />

</RelativeLayout>