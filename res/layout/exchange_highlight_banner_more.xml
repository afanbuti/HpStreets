<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exchange_banner"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:background="@drawable/exchange_highlight_banner_background_selector"
    android:gravity="center" >

    <TextView
        android:id="@+id/exchange_banner_more_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:shadowColor="#ffeeeeee"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="更多精彩推荐   "
        android:textColor="#4b4b4b"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/exchange_pb"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/exchange_banner_more_txt"
        android:src="@drawable/exchange_loading"
        android:visibility="invisible" >
    </ImageView>

</RelativeLayout>