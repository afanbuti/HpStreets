<?xml version="1.0" encoding="UTF-8"?>
<resources>

    <!-- 动画切换Activity -->
    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/umeng_share_popup_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/umeng_share_popup_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/umeng_share_popup_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/umeng_share_popup_exit</item>
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">@drawable/gray_gradient</item>
    </style>

    <style name="test" parent="android:Theme">
        <item name="android:windowTitleSize">40dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

    <style name="main_tab_bottom">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">#00000000</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/home_btn_bg</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="PointsProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/points_progressbar_background</item>
    </style>

    <style name="markStyle">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/mark_background</item>
        <item name="android:layout_margin">0.0dip</item>
        <item name="android:height">29.0dip</item>
    </style>

    <style name="blogTitleStyle">
        <item name="android:textSize">13.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/listtitle</item>
    </style>
    <!-- 无标题dialog形式 -->
    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 用来将一个Activity设置成dialog形式 -->
    <style name="Theme.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- <item name="android:windowTitleStyle">@android:style/DialogWindowTitle</item> -->
        <!-- <item name="android:windowBackground">@android:drawable/panel_background</item> -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 新鲜事日期样式 -->
    <style name="TextViewStyleCheckinListItemLineTimestamp">
        <item name="android:textSize">13.0dip</item>
        <item name="android:textColor">@color/grey_end</item>
    </style>
    <!-- 新鲜事点击评论按钮样式 -->
    <style name="commentButtonStyle" parent="@android:attr/buttonStyle">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/comment_button</item>
        <item name="android:layout_margin">0.0dip</item>
        <item name="android:height">35.0dip</item>
        <item name="android:shadowColor">#ff111111</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="list_bg">
        <item name="android:background">#fff4f4f4</item>
    </style>

    <style name="list_divider">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
        <item name="android:listSelector">@drawable/list_select_bg</item>
        <item name="android:childDivider">@drawable/separator_all</item>
        <item name="android:divider">@drawable/separator_all</item>
    </style>

    <style name="progress_drawable">
        <item name="android:maxWidth">30.0dip</item>
        <item name="android:maxHeight">30.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/progressbar_drawable_default</item>
        <item name="android:minWidth">30.0dip</item>
        <item name="android:minHeight">30.0dip</item>
    </style>

    <style name="text_title">
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="title_background">
        <item name="android:background">@drawable/public_moode_title_bg</item>
    </style>

    <style name="input_focus" parent="android:Theme">
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="title_black">
        <item name="android:background">@drawable/titlebar_black</item>
    </style>

    <style name="title_yellow">
        <item name="android:background">@drawable/titlebar_yellow</item>
    </style>

    <style name="titlebar_black" parent="android:Theme">
        <item name="android:windowTitleSize">42dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/title_black</item>
    </style>

    <style name="titlebar_yellow" parent="android:Theme">
        <item name="android:windowTitleSize">42dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/title_yellow</item>
    </style>

    <style name="text_black">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="title_bar_white">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_normal_black">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CategoryTextView" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">?android:textAppearanceLargeInverse</item>
        <item name="android:textColor">#FF0D4E7F</item>
        <item name="android:background">#FFD5E1FB</item>
    </style>

</resources>